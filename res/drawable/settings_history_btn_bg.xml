<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="false">
        
        <shape>
            
            <solid android:color="@color/light_green"/> 
                <stroke android:width="4dp" android:height="1dp" android:color="@color/white" />
                <corners
                    android:radius="0px" />
    
                <padding 
                    android:left="0dp"
                    android:top="0dp" 
                    android:right="0dp" 
                    android:bottom="0dp" />
            
        </shape>
        
    </item>
    
    <item android:state_pressed="true">
        
        <shape>
            
            <solid android:color="@color/faint_green"/>
                <stroke android:width="4dp" android:height="1dp" android:color="@color/white" />
                <corners
                    android:radius="0px" />
    
                <padding 
                    android:left="0dp"
                    android:top="0dp" 
                    android:right="0dp" 
                    android:bottom="0dp" />            
                
        </shape>
        
    </item>
    
</selector>