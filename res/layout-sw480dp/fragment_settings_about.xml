<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50sp"
    android:paddingLeft="25sp"
    android:paddingRight="25sp" 
    android:orientation="vertical"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:orientation="vertical"
        >
                
	    <TextView 
	        android:id="@+id/main_header"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"   
			android:paddingBottom="25sp"
	        android:textColor="@color/dark_grey"
	        android:text="About"
	        android:textStyle="bold"
	        android:textSize="42sp"
	        />
	    
	    <TextView 
	        android:id="@+id/main_header"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:textColor="@color/dark_grey"
	        android:text="Visus is a simple healthcare and productivity app, designed to optimise you’re experience using you’re PC, tablet or smartphone.\n\nAfter excessive hours staring at displays, whether in the office, at home, or on the bus, it’s hard to think constructively, whilst developing dry eyes, impacting productivity on day-to-day tasks.\n\nVisus aims to address these issues, and enable users to overcome these constraints."
	        android:textSize="24sp"
	        />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25sp"
        android:orientation="vertical"
        >
        
        
	    <TextView 
	        android:id="@+id/main_header"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
			android:paddingBottom="25sp"
	        android:textColor="@color/dark_grey"
	        android:text="Credits"
	        android:textStyle="bold"
	        android:textSize="42sp"
	        />
	    
	    <TextView 
	        android:id="@+id/main_header"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:textColor="@color/dark_grey"
	        android:text="Designed and produced by Jon Perry."
	        android:textSize="24sp"
	        />
        
    </LinearLayout>
    
    

</LinearLayout>