<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25sp"
    android:paddingLeft="15sp"
    android:paddingRight="15sp" 
    android:orientation="vertical"
    >
    
    <!-- about -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15sp"
        android:orientation="vertical"
        >
                
        <!-- header -->
	    <TextView 
	        android:id="@+id/settings_about_header"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"   
			android:paddingBottom="15sp"
	        android:textColor="@color/dark_grey"
	        android:text="@string/settings_about_header"
	        android:textStyle="bold"
	        android:textSize="28sp"
	        />
	    
	    <!-- blurb -->
	    <TextView 
	        android:id="@+id/settings_about_blurb"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:textColor="@color/dark_grey"
	        android:text="@string/settings_about_blurb"
	        android:textSize="14sp"
	        />
        
    </LinearLayout>
    
    <!-- credits -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >        
        
        <!-- header -->
	    <TextView 
	        android:id="@+id/settings_credit_header"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
			android:paddingBottom="15sp"
	        android:textColor="@color/dark_grey"	        
	        android:text="@string/settings_credit_header"
	        android:textStyle="bold"
	        android:textSize="28sp"
	        />
	    
	    <!-- credits blurb -->
	    <TextView 
	        android:id="@+id/settings_credit_blurb"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:textColor="@color/dark_grey"
	        android:text="@string/settings_credit_blurb"
	        android:textSize="14sp"
	        />
        
    </LinearLayout>
    
</LinearLayout>