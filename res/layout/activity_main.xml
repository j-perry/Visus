<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <!-- menu -->
    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    
        <!-- new session -->
	    <Button
	        android:onClick="newSession"
	        android:background="@drawable/main_menu_profile_bg"
            android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
            android:layout_gravity="center_horizontal"
        	android:gravity="center"
        	android:paddingTop="25dp"
        	android:paddingBottom="25dp"
			android:text="@string/title_activity_new_session"
	        android:textStyle="bold"
	        android:textAllCaps="true"
	        android:textColor="@drawable/main_menu_profile_txt"
	        android:textSize="24sp"
	        />
	    
	    <!-- sessions -->
	    <Button     
	        android:onClick="prevSessions"
	        android:background="@drawable/main_menu_profile_bg"
            android:layout_width="fill_parent" 
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
            android:layout_gravity="center_horizontal"
        	android:gravity="center"
        	android:paddingTop="25dp"
        	android:paddingBottom="25dp"
			android:text="@string/title_activity_prev_sessions"
	        android:textStyle="bold"
	        android:textAllCaps="true"
	        android:textColor="@drawable/main_menu_profile_txt"
	        android:textSize="24sp"
	        />
	    
	    <!-- settings -->
	    <Button
	        android:onClick="viewSettings"
	        android:background="@drawable/main_menu_profile_bg"
            android:layout_width="fill_parent" 
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
            android:layout_gravity="center_horizontal"  
        	android:gravity="center"
        	android:paddingTop="25dp" 
        	android:paddingBottom="25dp"
	        android:text="@string/title_activity_view_settings"
	        android:textAllCaps="true"
	        android:textStyle="bold"
	        android:textColor="@drawable/main_menu_profile_txt"
	        android:textSize="24sp"
	        />
	
	</LinearLayout>
	
    <!-- posted activity -->
    <ScrollView
        android:background="@color/light_grey" 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
        >
	    
        <!-- scroll view must only have one child element! -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            
            <!-- Latest activity -->
            <LinearLayout
                android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
			    android:layout_marginTop="25dp"
			    android:layout_marginBottom="25dp"
	            >
	
	            <!-- header -->
		        <Button
		            android:onClick="viewLatestUserActivities"
			        android:background="@drawable/main_menu_header_bg"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/latest_activity"
		        	android:textStyle="bold"
			        android:textAllCaps="false"
			        android:textColor="@drawable/main_menu_header_txt"
			        android:textSize="24sp"
			        />
		        
		        <!-- template -->
		        <TextView
			        android:background="@color/white"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/session_01"
			        android:textAllCaps="false"
			        android:textColor="#333"
			        android:textSize="24sp"
			        />
		    
		        <!-- template -->
		        <TextView
			        android:background="@color/white"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/session_02"
			        android:textAllCaps="false"
			        android:textColor="#333"
			        android:textSize="24sp"
			        />
		        
		    </LinearLayout>
		    
            <!-- Activities -->
            <LinearLayout
                android:background="@color/white"
	            android:orientation="vertical"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
			    android:layout_marginBottom="25sp"
	            >
	        
		        <!-- header -->
		        <Button
		            android:onClick="viewUserActivities"
			        android:background="@drawable/main_menu_header_bg"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/activities"
		        	android:textStyle="bold"
			        android:textAllCaps="false"
			        android:textColor="@drawable/main_menu_header_txt"
			        android:textSize="24sp"
			        />
		        
		        <!-- template -->
		        <Button
		            android:onClick="viewUserActivityCategory"
			        android:background="@color/white"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/music"
			        android:textAllCaps="false"
			        android:textColor="#333"
			        android:textSize="24sp"
			        />
		        
		        <!-- template -->
		        <TextView
			        android:background="@color/white"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/news"
			        android:textAllCaps="false"
			        android:textColor="#333"
			        android:textSize="24sp"
			        />
		        
		        <!-- template -->
		        <TextView
			        android:background="@color/white"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/gaming"
			        android:textAllCaps="false"
			        android:textColor="#333"
			        android:textSize="24sp"
			        />
		        
		        <!-- template -->
		        <TextView
			        android:background="@color/white"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/emails"
			        android:textAllCaps="false"
			        android:textColor="#333"
			        android:textSize="24sp"
			        />
		        
		        <!-- template -->
		        <TextView
			        android:background="@color/white"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:padding="25sp"
			        android:gravity="left"
			        android:text="@string/reading"
			        android:textAllCaps="false"
			        android:textColor="#333"
			        android:textSize="24sp"
			        />
		        
			</LinearLayout>
	        
	
		</LinearLayout>
        
    </ScrollView>
	
</LinearLayout>