<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E2E2E2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="25sp"
    android:paddingLeft="25sp"
    android:paddingRight="25sp"
    android:orientation="vertical"
    >
    
	<!-- task header -->
	<EditText
	    android:id="@+id/new_task_header"
	    android:background="@color/white"
	    android:padding="15sp"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginBottom="25dp"
	    android:hint="@string/hint_new_task"
	    android:inputType="textCapSentences"
	    android:textColor="@color/dark_grey"
	    android:textSize="24sp"
	    android:textColorHint="@color/dark_grey"
	    />
	
	<!-- description -->
	<EditText
	    android:id="@+id/new_task_description"
	    android:background="@color/white"
	    android:padding="15sp"
	    android:inputType="textMultiLine|textCapSentences"
	    android:lines="4"
	    android:gravity="top|left"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginBottom="25dp"
	    android:hint="@string/hint_new_description"
	    android:textColor="@color/dark_grey"
	    android:textSize="24sp"
	    android:textColorHint="@color/dark_grey"
	    />
	
	<!-- show date picker -->
	<Button
	    android:id="@+id/new_task_show_date_picker"
	    android:onClick="setDate"
	    android:padding="15sp"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginBottom="25dp"
	    android:gravity="left"
	    android:background="@color/white"
	    android:textColor="@color/dark_grey"
	    android:text="Set date"
	    android:textSize="24sp"
	    android:textColorHint="@color/dark_grey"
	    />
		
	<!-- submit -->
	<Button
	    android:id="@+id/register"
	    android:onClick="addTask"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:paddingTop="15sp"
	    android:paddingBottom="15sp"
	    android:background="@drawable/new_user_submit_bg"
	    android:textColor="@drawable/new_user_submit_txt"
	    android:textSize="24sp"
	    android:text="@string/btn_new_task"
	    android:gravity="center"
	    />

</LinearLayout>
